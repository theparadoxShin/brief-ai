rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User documents - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Usage logs - users can read their own logs, create is allowed
    match /usage/{logId} {
      allow read: if isAuthenticated() &&
                    resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Logs are immutable
    }

    // Conversation history - users can manage their own conversations
    match /conversations/{userId}/messages/{messageId} {
      allow read, write: if isOwner(userId);
    }

    // Public stats (read-only for users)
    match /stats/{statId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }

    // Subscriptions (managed by RevenueCat webhook)
    match /subscriptions/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; // Only Cloud Functions can write
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
