{
    "manifest_version": 3,
    "name": "Brief AI",
    "description": "Translate the text selected and can read it on a webpage into a concise summary using AI.",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage",
        "sidePanel"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "side_panel": {
        "default_path": "sidepanel/sidepanel.html"
    },
    "action":{
        "default_title": "Open Brief AI"
    }
}